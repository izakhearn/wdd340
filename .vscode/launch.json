{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost:5500/",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Launch via PNPM",
            "request": "launch",
            "runtimeArgs": [
              "run",
              "dev"
            ],
            "runtimeExecutable": "pnpm",
            "skipFiles": [
              "<node_internals>/**"
            ],
            "type": "node"
          }
    ],
    "compounds": [
        {
            "name": "Launch All",
            "configurations": ["Launch localhost", "Launch via PNPM"],
            "stopAll": true
        }
    ]
}